<?xml version="1.0" encoding="UTF-8"?>
<fop version="1.0">
  <!-- ================================================================== -->
  <!--~ 
    Default configuration file for the FOP XSL-FO renderer.
    
    The only thing this configuration file does is set the font handling to "auto-detect" (meaning it will
    try the use the system fonts).  
  -->
  <!-- ================================================================== -->
  <renderers>
    <renderer mime="application/pdf">
      <fonts>
        <auto-detect/>
      </fonts>
    </renderer>
  </renderers>
</fop>
